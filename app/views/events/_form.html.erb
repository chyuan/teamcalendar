      </ul>
    </div>
  <% end %>
<center>
  <div class="field"><h3>
    <%= f.label :title %>
    <%= f.text_field :title %></h3>
  </div><br>
  <div class="field"><h3>
    <%= f.label :starttime %>
    <%= f.datetime_select :starttime %></h3>
  </div><br>
  <div class="field"><h3>
    <%= f.label :endtime %>
    <%= f.datetime_select :endtime %></h3>
  </div><br>
  <div class="field"><h3>
    <%= f.label :repeat? %>
    <%= f.check_box :repeat %></h3>
  </div>
  <div class="field"><h3>
    <%= f.label :daily %>
    <%= f.check_box :daily %></h3>
  </div>
  <div class="field"><h3>
    <%= f.label :weekly %>
    <%= f.check_box :weekly %></h3>
  </div>
  <div class="field"><h3>
    <%= f.label :monthly %>
    <%= f.check_box :monthly %></h3>
  </div><br><br>

<h2>Which user does this new event belong to?</h2><br>
  <% @users.each do |p| %>
    <div class="field"><h3>
      <%= f.radio_button :user_id, p.id %>
      <%= f.label :user_id, p.name %></h3>
    </div>
  <% end %><br><br>
  <div class="actions">
    <%= f.submit %>
  </div></center>
<% end %>
